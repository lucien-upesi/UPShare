extends ../layout

block content
    div.container-fluid.h-100.fill.mt-5
        div.row.h-75.justify-content-center.align-items-center
            div.col.col-md-6.align-middle.shadow-1
                h1.text-center.m-3 Edit my account
                form(method="post", action="/users/update")
                    div.form-group
                        div.form-group.mb-3
                            label.font-weight-bold First name
                            input.form-control(type="text", name="account_first_name")

                    div.form-group
                        div.form-group.mb-3
                            label.font-weight-bold Last name
                            input.form-control(type="text", name="account_last_name")

                    div.form-group
                        div.form-group.mb-3
                            label.font-weight-bold Birthday
                            input.form-control(type="date", name="account_birthday")


                    div.form-group
                        label Country
                        select.form-control(name="register_country", required)
                            for country in countries
                                option(value=country.Code) #{country.Name}


                    input(type="hidden", name="_csrf", value=csrfToken)
                    div.d-flex.justify-content-center
                        button#edit_account_btn.btn.btn-primary.mt-3.mb-3(type="submit") Update