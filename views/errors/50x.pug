extends ../layout

block content
    if error.status === 500
        div.container-fluid
            div.row
                div.col
                    h3.pr-3.mt-3 #{error.status} Le serveur à un petit soucis..
                    img.img-fluid.mx-auto(src='../images/ohno.png', style='max-width:75%')
    else if error.status === 501
        div.container-fluid
            div.row
                div.col
                    h3.pr-3.mt-3 #{error.status} Oh no!
                    img.img-fluid.mx-auto(src='../images/ohno.png', style='max-width:75%')
    else if error.status === 502
        div.container-fluid
            div.row
                div.col
                    h3.pr-3.mt-3 #{error.status} Problème détécté!
                    img.img-fluid.mx-auto(src='../images/ohno.png', style='max-width:75%')