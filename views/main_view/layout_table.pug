mixin table-header(header)
    th(scope="col") #{header}

mixin table-row(...rows)
    tr
        th(scope="row")
            if block
                block

            each row in rows
                td(style="vertical-align:middle") #{row}

            td(style="width:15%")
                div.dropdown
                    a.btn.btn-info.btn-sm.dropdown-toggle#btnDrop(role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                        i.material-icons.align-middle settings
                    div.dropdown-menu(aria-labelledby="btnDrop")
                        a.dropdown-item(href="#")
                            i.material-icons.align-middle.mr-2 mode_edit
                            | Edit
                        a.dropdown-item(href="#")
                            i.material-icons.align-middle.mr-2 delete_forever
                            | Remove

mixin table-icon(icon, style)
    i.material-icons(style=style)= icon

