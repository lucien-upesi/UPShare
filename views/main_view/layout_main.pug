extends ../layout

block content
    div.container-fluid.fill.h-100
        div.row
            div.col-12
                block subnavbar
        div.row(style="margin-bottom:0.5rem; margin-top:0.3rem")
                div.aside.nav.col-2#sidebar
                    ul.list-unstyled.w-100
                        block aside
                //div w/col-10 to fit in web-page
                div.main.col-10(style="margin-top:2.5rem")

                    block main
                        //div w/white border and separator to draw files & folders
                        div(style="border:1px solid #e5e5e5; background-color:#FFFFFF")
                            //TODO: replace after w/tables

                            table
                                thead
                                    tr
                                        th(scope="col") #
                                        th(scope="col") FileName
                                        th(scope="col") Modified
                                tbody
                                    tr
                                        th(scope="row")
                                            i.material-icons.mr-2 folder_shared
                                                | MyFolder

    script(src="javascripts/main_layout.js")