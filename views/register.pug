extends layout

block content
    div.container-fluid
        div.row
            div.col
                form(action="/users/register", method="post")
                    div.form-group
                        label First name
                        input.form-control(type="text", name="register_first_name", required)

                    div.form-group
                        label Last name
                        input.form-control(type="text", name="register_last_name", required)

                    div.form-group
                        label Birthday
                        input.form-control(type="date", name="register_birthday", required)

                    div.form-group
                        label Country
                        select.form-control(name="register_country", required)
                            for country in countries
                                option(value=country.Code) #{country.Name}

                    label E-mail
                    div.input-group.mb-3
                        div.input-group-prepend
                            span.input-group-text
                                i.material-icons email
                        input.form-control(type="email", name="register_email", required)

                    label Password
                    div.input-group.mb-3
                        div.input-group-prepend
                            span.input-group-text
                                i.material-icons lock
                        input.form-control(type="password", name="register_pwd", required)

                    input(type="hidden", value=csrfToken, name="_csrf")

                    button.btn.btn-primary(type="submit") S'inscrire